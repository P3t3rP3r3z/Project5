<p id="notice"><%= notice %></p>

<h1>Sections</h1>

<%= form_tag(sections_path, method: :get) do %>
  <%= text_field_tag :search %>
  <%= label_tag(:search, "Search for:") %>
  <%= submit_tag 'Search' %>
<% end %>

<table>
  <thead>
    <tr>
      <th>Semester</th>
      <th>Section</th>
      <th>Course</th>
      <th>Room number</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sections.each do |section| %>
      <tr>
        <td><%= section.semester %></td>
        <td><%= section.section_id %></td>
        <td><%= section.course.course_name%></td>
        <td><%= section.room_number %></td>
        <td><%= link_to 'Show', section %></td>
        <td><%= link_to 'Edit', edit_section_path(section) %></td>
        <td><%= link_to 'Destroy', section, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Section', new_section_path %>
