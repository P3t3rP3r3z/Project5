<%= form_with(model: section, local: true) do |form| %>
  <% if section.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(section.errors.count, "error") %> prohibited this section from being saved:</h2>

      <ul>
      <% section.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :semester %>
    <%= form.text_field :semester, id: :section_semester %>
  </div>

  <div class="field">
    <%= form.label :section_id %>
    <%= form.number_field :section_id, id: :section_section_id %>
  </div>

  <div class="field">
    <%= form.label :course_id %>
    <%= form.collection_select :course_id, Course.order(:course_name), :id, :course_name, include_blank: true %>
  </div> 

  <div class="field">
    <%= form.label :room_number %>
    <%= form.text_field :room_number, id: :section_room_number %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
